<Window x:Class="KanDic.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Background="White"
        Title="Register" Height="105" Width="300">
    <DockPanel>
        <TextBlock Text="提督，怎么称呼您？&#13;（尽量不要用奇♂奇♂怪♀怪♀的符号，无法更换）" Margin="5" DockPanel.Dock="Top"/>
        <Button Name="OKB" Content="OK" IsEnabled="False" DockPanel.Dock="Bottom" Click="OKB_Click"/>
        <Border BorderBrush="Gray" BorderThickness="1">
            <TextBox Name="TB" Background="White" Foreground="Black" TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center" TextAlignment="Center"/>
        </Border>
    </DockPanel>
</Window>
