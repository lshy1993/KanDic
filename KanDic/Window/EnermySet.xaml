<Controls:MetroWindow
    x:Class="KanDic.Window.EnermySet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="Enemy"
    Height="340" Width="620"
    BorderThickness="1"
    EnableDWMDropShadow="True"
    ResizeMode="CanResizeWithGrip"

    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel Name="ImagePanel" Margin="5" DockPanel.Dock="Left"/>
        <StackPanel>
            <Border BorderBrush="Gray" BorderThickness="1" Background="{DynamicResource AccentColorBrush}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Name="Formation" Text="阵型" Margin="5"/>
                    <TextBlock Name="AirA" Text="阵型" Margin="5"/>
                    <TextBlock Name="AirB" Text="阵型" Margin="5"/>
                    <TextBlock Name="AirC" Text="阵型" Margin="5"/>
                </StackPanel>
            </Border>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Name="DataPanel" Orientation="Horizontal"/>
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</Controls:MetroWindow>
