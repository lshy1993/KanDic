<Window x:Class="KanDic.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="White"
        Title="Confirm" Height="130" Width="350">
    <DockPanel>
        <TextBlock Name="maintext" Text="【提督方略】已更新！" FontSize="20" HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="10"/>
        <DockPanel Name="ButtonPanel" DockPanel.Dock="Bottom" Margin="5">
            <Button Content="网盘" DockPanel.Dock="Left" Click="Yun_Click"/>
            <Button Content="稍后提醒" DockPanel.Dock="Right" Click="Cancel_Click"/>
            <Button Content="开始更新" DockPanel.Dock="Right" Margin="5,0" Click="Download_Click"/>
            <Rectangle/>
        </DockPanel>
        <TextBlock Text="可以开始下载吗？" FontSize="16" HorizontalAlignment="Center" Margin="5"/>
    </DockPanel>
</Window>
