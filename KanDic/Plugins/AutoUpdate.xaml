<Controls:MetroWindow
    x:Class="KanDic.Plugins.AutoUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
    ShowInTaskbar="False"
    Title="AutoUpdater"
    Height="300" Width="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ProgressBar Name="xx" DockPanel.Dock="Bottom" Height="20" Maximum="50" Minimum="1"/>
        <TextBlock Name="Status" DockPanel.Dock="Bottom" HorizontalAlignment="Center"/>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock Name="AppVer" DockPanel.Dock="Left" FontSize="16" Margin="10,0,0,0"/>
            <TextBlock Name="DataVer" DockPanel.Dock="Right" FontSize="16" Margin="0,0,10,0"/>
            <Rectangle/>
        </DockPanel>
        <Frame Name="ChangeLog"/>
    </DockPanel>
</Controls:MetroWindow>
