<Window
    x:Class="KanDic.Plugins.Loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    WindowStyle="None"
    Background="Transparent"
    AllowsTransparency="True"
    Height="600" Width="800"
    Visibility="Hidden"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/KanDic;component/Cache/loading.jpg" Stretch="Uniform" VerticalAlignment="Top"/>
        <Image Source="/KanDic;component/Cache/loading-d.png" Height="150" Stretch="UniformToFill" VerticalAlignment="Bottom"/>
        <Canvas Name="AnimationPanel">
            <Path Name="oval1" Stroke="White" StrokeThickness="1">
                <Path.Data>
                    <EllipseGeometry x:Name="ov1" Center="400,550" RadiusX="60" RadiusY="16"></EllipseGeometry>
                </Path.Data>
            </Path>
            <Image Name="ship" Source="/KanDic;component/Cache/ship.png" Width="110" Canvas.Left="345" Canvas.Top="515"/>
        </Canvas>
    </Grid>
</Window>
